     </div>


{{#if loggedIn}}
<ol class="post-list">
  {{#each posts}}
  <li>
    <section>
      <div class="post-title">
      {{title}}
      </div>
      <div class="column">
      <span class=""> </span>
      </div>
     <div class="post"></div>
     {{post_content}}
        </div>
      <div class="meta">
        By {{user.username}} on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </section>
  </li>
  {{/each}}
</ol>
{{/if}}



