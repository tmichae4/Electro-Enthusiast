
<section>
<div class="post">
    <div class="post-title">
        <header class="card-header">
        <div class="column">
        <h4><a href="/post/{{id}}">{{title}}</a></h4>
    </div>
    </header>
    
<div class="column">
      <span class=""> </span>
      </div>
     <div class="post"></div>
     {{post_content}}
        </div>

   <div class="meta" id="meta">
      {{user.username}} on {{format_date created_at}}
      |
      <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</section>



